<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.scalafx.extras.showmessage.ShowMessageDemoController">
    <padding>
        <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
    </padding>
    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="showInformationButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Information" textAlignment="CENTER"/>
                <Button fx:id="showConfirmationButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Confirmation (Yes/No)" textAlignment="CENTER"/>
                <Button fx:id="showConfirmationYNCButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Confirmation (Yes/No/Cancel)" textAlignment="CENTER"/>
                <Button fx:id="showWarningButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Warning" textAlignment="CENTER"/>
                <Button fx:id="showErrorButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Error" textAlignment="CENTER"/>
                <Button fx:id="showExceptionButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Show Exception" textAlignment="CENTER"/>
            </children>
            <padding>
                <Insets bottom="14.0" left="14.0" right="14.0" top="14.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="14.0" left="21.0" right="21.0" top="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
